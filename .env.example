# SimpleX Bot Environment Variables Template
# Copy this file to .env and customize for your setup
# NEVER commit the actual .env file to version control

# Server Configuration - Replace with your actual server addresses
SMP_SERVER_1=smp://your-primary-smp-server.com
SMP_SERVER_2=smp://your-backup-smp-server.com
XFTP_SERVER_1=xftp://your-primary-xftp-server.com  
XFTP_SERVER_2=xftp://your-backup-xftp-server.com

# Bot Configuration
BOT_NAME=SimpleX Bot
WEBSOCKET_URL=ws://simplex-chat:3030
AUTO_ACCEPT_CONTACTS=true

# Logging Settings
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Media Settings
MEDIA_DOWNLOAD_ENABLED=true
MAX_FILE_SIZE=100MB
MEDIA_STORAGE_PATH=./media

# Security Settings  
MAX_MESSAGE_LENGTH=4096
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW=60

# Optional: Database encryption key (if implementing encrypted storage)
# DB_ENCRYPTION_KEY=your-32-character-encryption-key

# Optional: Webhook URLs for external notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
# WEBHOOK_SECRET=your-webhook-secret